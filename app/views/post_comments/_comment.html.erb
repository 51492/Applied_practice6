    <div>
      <% book.post_comments.each do |post_comment| %>
        <div>
          <%= image_tag post_comment.user.get_profile_image(100,100) %>
          <%= post_comment.comment %>
          <% if post_comment.user == current_user %>
            <%= link_to "Destroy",book_post_comment_path(post_comment.book, post_comment), method: :delete, class:"btn btn-danger", remote:true, data: {"turbolinks" => false} %>
          <% end %>
        </div>

        <div><%= link_to post_comment.user.name, user_path(post_comment.user.id) %></div>
      <% end %>
    </div>
