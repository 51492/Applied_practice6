  <%= form_with model: [book, post_comment], local: false do |f| %>
    <!--local: falseにすることで非同期設定となりjsファイルを探しに行く-->
      <div class="form-group">
        <%= f.text_area :comment, rows: '5', class: "form-control comment" %>
      </div>

      <div>
        <%= f.submit "送信" %>
      </div>
  <% end %>